project(hdf5thumbcreator)
find_package(KDE4 REQUIRED)
include (KDE4Defaults)
include(MacroOptionalAddSubdirectory)
set(hdf5thumbnail_SRCS hdf5thumbnail.cpp)
kde4_add_ui_files(hdf5thumbnail_SRCS config.ui )
kde4_add_plugin(hdf5thumbnail ${hdf5thumbnail_SRCS})
target_link_libraries(hdf5thumbnail ${KDE4_KIO_LIBS})
install(TARGETS hdf5thumbnail DESTINATION ${PLUGIN_INSTALL_DIR})
install(FILES hdf5thumbcreator.desktop DESTINATION ${SERVICES_INSTALL_DIR})
